  <script type="text/javascript">
    function accordion1() {
    if (document.getElementById('content1').innerHTML =="") {
    document.getElementById('content1').innerHTML = "The pain itself is a lot of pain, it's enhanced. To soothe the troubles, let him seek those whom they encounter! What services drive back all pain, nothing by what means, by reason of greed! But, be soothed, accepted! Our mind, the wise man!";
    document.getElementById('sec1').innerHTML = "- Section 1";
    document.getElementById('content1').style.marginBottom = '38px';
    
    } else {
      document.getElementById('content1').innerHTML = "";
      document.getElementById('sec1').innerHTML = "+ Section 1";
      document.getElementById('content1').style.marginBottom = '';
    }


 }
